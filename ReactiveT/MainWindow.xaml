<Window x:Class="ReactiveT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reactive Data" Height="350" Width="525" Loaded="Window_Loaded_1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <DataGrid Grid.Row="0" Name="DataGrid" IsEnabled="True" IsReadOnly="false" CanUserAddRows="False">
        </DataGrid>
        <Button Margin="10" Grid.Row="1" Name="SaveButton"  Content="Save" Click="SaveButton_OnClick"/>
        
    </Grid>
</Window>
